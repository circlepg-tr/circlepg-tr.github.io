---
import { getEntry, render } from "astro:content";
import Main from "../layouts/MainLayout.astro";
import Markdown from "../components/Markdown.astro";
import I18nKeys from "../locales/keys";
import { i18n } from "../locales/translation";

const homePost = await getEntry("specs", "home");
const { Content } = await render(homePost!);
---

<Main title={i18n(I18nKeys.pages_home_home)} subTitle={i18n(I18nKeys.pages_home_subtitle)}>
  <div class="article-wrapper">
    <div class="article">
      <Markdown>
        <Content />
      </Markdown>
    </div>
  </div>
</Main>

<style>
  .article-wrapper {
    @apply w-full rounded-2xl bg-[var(--card-color)] p-10;
  }
  .article {
    @apply flex flex-col;
  }
</style>

